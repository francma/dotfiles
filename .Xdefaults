URxvt.iso14755: false
URxvt.perl-ext-common: default,clipboard,keyboard-select

URxvt.scrollBar: false
URxvt.font: xft:Roboto Mono:size=11
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true

URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! special
*.foreground:   #e9fafa
*.background:   #212121

! black
*.color0:       #303030
*.color8:       #5d6f71

! red
*.color1:       #e53935
*.color9:       #ff5370

! green
*.color2:       #91b859
*.color10:      #c3e88d

! yellow
*.color3:       #ffb62c
*.color11:      #ffcb6b

! blue
*.color4:       #6182b8
*.color12:      #82aaff

! magenta
*.color5:       #7c4dff
*.color13:      #c792ea

! cyan
*.color6:       #39adb5
*.color14:      #89ddff

! white
*.color7:       #f5f5f5
*.color15:      #f5f5f5

rofi.color-enabled: true
rofi.color-window: #212121, #82aaff, #82aaff
rofi.color-normal: #212121, #e9fafa, #343434, #5d6f71, #eee8d5
rofi.color-active: #212121, #82aaff, #eee8d5, #82aaff, #212121
rofi.color-urgent: #212121, #ff5370, #eee8d5, #ff5370, #212121

! fix cursor scaling when switching monitors
Xcursor.theme: Vanilla-DMZ
Xcursor.size: 24 
