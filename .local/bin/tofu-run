#!/bin/sh
set -eu

export BEMENU_OPTS='-i -l 10 -B 5 -H 40 -W 0.33 --fn "monospace 14" -p ">" --hp 5 -c --fixed-height'

cd ~/.local/share/applications 

selection=$(find . -name '*.desktop' | xargs grep -L 'NoDisplay=true' | xargs basename -s '.desktop' | sort | bemenu)
if [ $? -eq 0 ]; then
    printf "%s.desktop\n" "$selection" | xargs dex
fi

