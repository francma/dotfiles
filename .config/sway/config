set $mod Mod4

set $black #1d2021
set $wheat #ebdbb2
set $darkseagreen #689d6a
set $darkslategray #32302f
set $firebrick #cc241d

font pango:monospace 11

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# remove title bars
default_border pixel
hide_edge_borders smart

# volume controls
bindsym XF86AudioRaiseVolume exec pamixer -ui 2 && pamixer --get-volume > $SWAYSOCK.wob
bindsym XF86AudioLowerVolume exec pamixer -ud 2 && pamixer --get-volume > $SWAYSOCK.wob
bindsym XF86AudioMute exec pamixer --toggle-mute && ( pamixer --get-mute && echo 0 > $SWAYSOCK.wob ) || pamixer --get-volume > $SWAYSOCK.wob

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop

bindsym XF86Battery exec swaylock -f -c "$accent"

bindsym XF86MonBrightnessUp exec light -A 5 && light -G | cut -d'.' -f1 > /tmp/wobpipe
bindsym XF86MonBrightnessDown exec light -U 5 && light -G | cut -d'.' -f1 > /tmp/wobpipe

bindsym $mod+q exec makoctl dismiss --all

bindsym $mod+Return exec footclient
bindsym $mod+t exec subl
bindsym Print exec sh -c 'file="$HOME/Pictures/screenshots/$(date +"%Y-%m-%d_%H:%M:%S.png")" && grim "$file" && notify-send "Screenshot taken" && wl-copy < "$file"'

bindsym $mod+Shift+q kill

for_window [instance="phpstorm"] max_render_time 1
for_window [app_id="foot-terminal"] max_render_time 1

# program launcher
for_window [app_id="^swaylauncher$"] floating enable, layout tabbed
bindsym $mod+d exec footclient --app-id swaylauncher bash -c 'compgen -c | sort -u | fzf -e | xargs -r swaymsg -t command exec'
bindsym $mod+Shift+d exec footclient --app-id swaylauncher bash -ic 'find ~/.password-store -printf "%P\n" | grep ".gpg$" | sed "s/.gpg$//" | sort | fzf -e | xargs -r pass show | head -1 | wl-copy -no && swaymsg [app_id=^swaylauncher$] resize set 200 50, move position 0 0 && echo copied to clipboard'

# recent used desktop switch
bindsym $mod+Tab workspace back_and_forth
workspace_auto_back_and_forth yes

# Make the currently focused window a scratchpad
bindsym $mod+Shift+Grave move scratchpad

# Show the first scratchpad window
bindsym $mod+Grave scratchpad show

# alternatively, you can use the cursor keys:
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# class                 border|backgr|text|indicator|child_border
client.focused          $darkseagreen $darkseagreen $black $black
client.focused_inactive $black $darkslategray $wheat $black
client.unfocused        $black $darkslategray $wheat $black
client.urgent           $firebrick $firebrick $wheat $black

bar {
    font pango: monospace 10
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position bottom
    tray_output none

    colors {
        background $black
        statusline $wheat
        focused_workspace    $darkseagreen $darkseagreen $black
        inactive_workspace   $black $black $wheat
        active_workspace     $darkslategray $darkslategray $black
        urgent_workspace     $firebrick $firebrick $black
    }
}


input 1:1:AT_Translated_Set_2_keyboard {
    xkb_layout us,cz
    xkb_variant ,qwerty
    xkb_options grp:alt_shift_toggle,caps:escape
    repeat_delay 200
    repeat_rate 30
}

input 1241:355:USB-HID_Keyboard {
    xkb_layout us,cz
    xkb_variant ,qwerty
    xkb_options grp:alt_shift_toggle
    repeat_delay 200
    repeat_rate 30
}

input * {
    accel_profile flat
}

#input 2:7:SynPS/2_Synaptics_TouchPad {
#    tap enabled
#}

exec swaybg -c "$black"

exec swayidle -w before-sleep 'swaylock -f -c "$firebrick"'

exec mako --font "monospace 11" --background-color "$black" --text-color "$wheat" --border-color "$darkseagreen"

exec kanshi

exec foot -s

exec mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob

seat seat0 xcursor_theme Adwaita
exec_always {
    gsettings set org.gnome.desktop.interface font-name 'sans-serif 11'
    gsettings set org.gnome.desktop.interface gtk-theme 'Adwaita-dark'
    gsettings set org.gnome.desktop.interface icon-theme 'Arc'
    gsettings set org.gnome.desktop.interface cursor-theme 'Adwaita'
}
